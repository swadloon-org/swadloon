/**
 * For typescript CLI (Oclif) used with NodeJS
 */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "node16",
    //
    // should be set according to choosen NodeJS version and
    // its support of recent features https://node.green/
    //
    "target": "es2021",
    "lib": ["es2021"],
    "types": ["node", "jest", "chai"]
  }
}
