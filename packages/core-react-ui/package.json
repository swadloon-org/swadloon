{
  "name": "@newrade/core-react-ui",
  "version": "2.4.0",
  "description": "UI library",
  "license": "MIT",
  "main": "dist/newrade-core-react-ui.cjs.js",
  "module": "dist/newrade-core-react-ui.esm.js",
  "files": [
    "/dist",
    "/utilities",
    "/global",
    "/default-theme",
    "/design-system",
    "/theme",
    "/code",
    "/markdown",
    "/icons-kit-ionicons-outline"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:dist && nr prepare-exports",
    "build:dist": "tsc --build tsconfig.json",
    "build:dll": "yarn webpack:dll",
    "clean": "yarn clean:tsc && yarn clean:dist",
    "clean:dist": "rimraf -rf dist/** lib/**",
    "clean:tsc": "rimraf -f ./**/*.tsbuildinfo *.tsbuildinfo",
    "dev": "yarn clean && yarn preconstruct dev",
    "test": "nr jest",
    "test:watch": "nr jest-watch",
    "tsc:build": "tsc --build",
    "tsc:start": "tsc --build --watch --preserveWatchOutput --verbose",
    "webpack": "TS_NODE_PROJECT=../../tsconfig.node-cli.json node -r ts-node/register ../../node_modules/webpack/bin/webpack",
    "webpack:dev": "yarn webpack serve --config webpack.dev.config.ts",
    "webpack:dll": "yarn webpack --config webpack.dll.config.ts"
  },
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "utilities.ts",
      "design-system.ts",
      "global.ts",
      "theme.ts",
      "default-theme.ts",
      "code.ts",
      "markdown.ts",
      "icons-kit-ionicons-outline.ts"
    ]
  },
  "sideEffects": [
    "*.css",
    "*.css.ts",
    "*.css.js",
    "*.treat.ts",
    "*.treat.js"
  ],
  "dependencies": {
    "@capsizecss/core": "^3.0.0",
    "@capsizecss/metrics": "^0.1.0",
    "@capsizecss/vanilla-extract": "^1",
    "@loadable/component": "^5.14.1",
    "@newrade/core-cli": "*",
    "@newrade/core-common": "*",
    "@newrade/core-design-system": "*",
    "@newrade/core-jest-config": "*",
    "@newrade/core-types": "*",
    "@newrade/core-webpack-config": "*",
    "@react-google-maps/api": "^2.1.1",
    "@react-spring/web": "^9.1.2",
    "@types/cleave.js": "^1.4.4",
    "@types/element-resize-detector": "^1.1.2",
    "@vanilla-extract/css": "^1.6.3",
    "@vanilla-extract/css-utils": "^0.1.1",
    "@vanilla-extract/recipes": "^0.2.1",
    "@vanilla-extract/sprinkles": "^1",
    "case": "^1.6.3",
    "cleave.js": "1.5.10",
    "csstype": "^3",
    "element-resize-detector": "^1.2.2",
    "github-slugger": "^1.4.0",
    "lethargy": "^1.0.9",
    "lodash": "^4",
    "polished": "^3.6.6",
    "prettier": "^2",
    "prism-react-renderer": "^1.2.0",
    "prismjs": "^1.23.0",
    "react": "^16.13.1",
    "react-cache": "^2.0.0-alpha.1",
    "react-dom": "^16.13.1",
    "react-icons": "^4.3.1",
    "react-treat": "^2",
    "react-use-gesture": "^9.1.3",
    "treat": "^2",
    "use-resize-observer": "^7.0.0"
  }
}
